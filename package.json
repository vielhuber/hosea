{
    "scripts": {
        "css:sass": "sass --style compressed --no-source-map ./_scss/style.scss ./_public/_build/bundle.css",
        "css:sass:dev": "sass ./_scss/style.scss ./_public/_build/bundle.css",
        "css:autoprefix": "postcss --use autoprefixer --output ./_public/_build/bundle.css ./_public/_build/bundle.css",
        "css": "npm-run-all --sequential css:sass css:autoprefix",
        "css:dev": "npm-run-all --sequential css:sass:dev",
        "js:browserify": "browserify ./_js/script.js --outfile ./_public/_build/bundle.js --debug --transform babelify",
        "js:uglify": "uglifyjs --compress --mangle --output ./_public/_build/bundle.js ./_public/_build/bundle.js",
        "js": "npm-run-all --sequential js:browserify js:uglify",
        "js:dev": "npm-run-all --sequential js:browserify",
        "html": "html-minifier-next --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --minify-css true --minify-js true --input-dir ./_html --output-dir ./_public --file-ext html",
        "html:dev": "html-minifier-next --input-dir ./_html --output-dir ./_public --file-ext html",
        "watch:css": "onchange './_scss/**/*.scss' --initial --poll 25 --delay 0 --await-write-finish 25 -- onerror \"npm run css:dev --silent\" --title \"watch:css\" --message \"build failed\" --sound mute",
        "watch:js": "onchange './_js/**/*.js' --initial --wait --delay 200 --await-write-finish -- onerror \"npm run js:dev --silent\" --title \"watch:js\" --message \"build failed\" --sound mute",
        "watch:html": "onchange './_html/**/*.html' --initial --poll 25 --delay 0 --await-write-finish 25 -- onerror \"npm run html:dev --silent\" --title \"watch:html\" --message \"build failed\" --sound mute",
        "prod": "npm-run-all --parallel html js css",
        "dev": "npm-run-all --parallel watch:*"
    },
    "dependencies": {
        "@babel/cli": "^7.28.3",
        "@babel/core": "^7.28.5",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-transform-runtime": "^7.28.5",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.28.5",
        "@babel/runtime": "^7.28.4",
        "@prettier/plugin-php": "^0.24.0",
        "autoprefixer": "^10.4.22",
        "babel-core": "^7.0.0-bridge.0",
        "babel-plugin-array-includes": "^2.0.3",
        "babelify": "^10.0.0",
        "browser-sync": "^3.0.4",
        "browserify": "^17.0.1",
        "chart.js": "^4.5.1",
        "cli-error-notifier": "^3.0.2",
        "concat": "^1.0.3",
        "cross-var": "^1.1.0",
        "eslint": "^9.39.1",
        "hammerjs": "^2.0.8",
        "hlp": "^3.5.7",
        "html-minifier-next": "^4.1.1",
        "ismobilejs": "^1.1.1",
        "jwtbutler": "^1.7.1",
        "sass": "^1.94.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "postcss-cli": "^11.0.1",
        "prettier": "^3.6.2",
        "pulltorefreshjs": "^0.1.22",
        "regenerator-runtime": "^0.14.1",
        "run-sequence": "^2.2.1",
        "sweetalert2": "^11.26.3",
        "tippy.js": "^6.3.7",
        "uglify": "^0.1.5",
        "vinyl-buffer": "^1.0.1",
        "vinyl-source-stream": "^2.0.0",
        "whatwg-fetch": "^3.6.20"
    },
    "name": "hosea",
    "version": "1.3.3",
    "description": "",
